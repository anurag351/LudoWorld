<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img"
        tools:context=".MainActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/lay1" tools:ignore="ExtraText"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:fadeScrollbars="true" android:scrollbarSize="4dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true" android:isScrollContainer="true">
        <TextView
                android:text="@string/welcome_to_ludo_world"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/heading" android:textSize="30sp"
                android:textStyle="bold|italic" android:padding="10dp" android:textColor="#D10404"
                android:background="#2196F3" android:gravity="center|fill"
                android:textAlignment="center"
                android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp"
                android:paddingBottom="0dp"/>
        <Button
                android:text="@string/local_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/local"
                android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp" android:layout_marginStart="60dp" android:layout_marginEnd="60dp"
                android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
                android:textColor="#4CAF50" android:onClick="startLocalGame"/>
        <Button
                android:text="@string/computer"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/computer" android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
                android:textColor="#4CAF50" android:onClick="startComputerGame"/>
        <Button
                android:text="@string/connect_wifi"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/wifigame" android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
                android:textColor="#4CAF50" android:onClick="playOnWiFi"/>
        <Button
                android:text="@string/connect_internet"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/onlinegame" android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
                android:textColor="#4CAF50" android:onClick="playOnInternet"/>
        <Button
                android:text="@string/quit_game"
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" android:id="@+id/quit" android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
                android:textColor="#4CAF50" android:onClick="quitGame"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>