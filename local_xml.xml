<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/lay11"
              android:layout_marginTop="1dp" android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"  android:layout_marginEnd="1dp"
              android:background="@drawable/img"
                android:layout_marginRight="1dp" android:layout_marginBottom="1dp">
    <TextView
            android:text="@string/welcome_to_ludo_world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/heading" android:textSize="25sp"
            android:textStyle="bold|italic" android:padding="10dp" android:textColor="#D10404"
            android:background="#2196F3" android:gravity="center|fill"
            android:textAlignment="center"
            android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp"
            android:paddingBottom="0dp"/>
    <TextView
            android:text="@string/choose_no_of_players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:textAlignment="center"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="#03A9F4" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#673AB7" android:id="@+id/choice" android:padding="10dp"
            android:gravity="center_horizontal" android:layout_gravity="center_horizontal"/>
    <Button
            android:text="@string/_4_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/player4"
            android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp" android:layout_marginStart="60dp" android:layout_marginEnd="60dp"
            android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#4CAF50" android:onClick="player4Game"/>
    <Button
            android:text="@string/_3_player"
            android:layout_width="match_parent"
            android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:id="@+id/player3" android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#4CAF50" android:onClick="player3Game"/>
    <Button
            android:text="@string/_2_player"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:id="@+id/player2" android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#4CAF50" android:onClick="player2Game"/>
    <Button
            android:text="@string/back"
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp" android:layout_marginTop="20dp" android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" android:id="@+id/back" android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:background="#9C27B0" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#4CAF50" android:onClick="goBackMain"/>



</LinearLayout>
