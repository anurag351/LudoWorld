<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/lay11"
                                                   android:layout_marginTop="1dp" android:layout_marginLeft="1dp"
                                                   android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
                                                   android:layout_marginRight="1dp" android:layout_marginBottom="1dp">
    <TextView
            android:text="@string/welcome_to_ludo_world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/heading" android:textSize="25sp"
            android:textStyle="bold|italic" android:padding="10dp" android:textColor="#D10404"
            android:background="#2196F3" android:gravity="center|fill"
            android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp"
            android:paddingBottom="0dp" android:textAlignment="center" android:layout_alignParentBottom="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:text="@string/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:background="#03A9F4" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#673AB7" android:id="@+id/choice" android:padding="10dp" android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/heading" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerID" android:layout_weight="1" android:padding="0dp"
            android:textSize="25sp" android:layout_margin="10dp"
            android:autofillHints="" android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:hint="@string/player_1" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/choice"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="30dp"/>
    <Button
            android:text="@string/log_in"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/login"
            android:background="#9C27B0" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#4CAF50" android:onClick="loginNow"
            app:layout_constraintTop_toBottomOf="@+id/playerID" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"/>
    <Button
            android:text="@string/back"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/back"
            android:background="#9C27B0" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#4CAF50" android:onClick="goBackInternet"
            app:layout_constraintTop_toBottomOf="@+id/login" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
