<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/lay11"
              android:layout_marginTop="1dp" android:layout_marginLeft="1dp"
              android:layout_marginStart="1dp"  android:layout_marginEnd="1dp"
              android:layout_marginRight="1dp" android:layout_marginBottom="1dp">
    <TextView
            android:text="@string/welcome_to_ludo_world"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/heading" android:textSize="25sp"
            android:textStyle="bold|italic" android:padding="10dp" android:textColor="#D10404"
            android:background="#2196F3" android:gravity="center|fill"
            android:paddingLeft="0dp" android:paddingTop="0dp" android:paddingRight="0dp"
            android:paddingBottom="0dp" android:textAlignment="center"/>
    <TextView
            android:text="@string/add_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="#03A9F4" android:textSize="25sp" android:textStyle="bold"
            android:textColor="#673AB7" android:id="@+id/choice" android:padding="10dp" android:textAlignment="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="bottom"
            android:layout_height="match_parent" android:padding="20dp"
            android:background="#009688" android:baselineAligned="false" android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:layout_marginEnd="30dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/img1"
                    android:layout_weight="1" android:layout_margin="10dp" android:contentDescription="@string/todo"
                    android:background="#EFC4C4" android:onClick="getColor" android:tag="1"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/img2"
                    android:layout_weight="1" android:layout_margin="10dp" android:background="#C0F6C2"
                    android:tag="2"
                    android:onClick="getColor" android:contentDescription="@string/todo"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/img3"
                    android:tag="3"
                    android:layout_weight="1" android:layout_margin="10dp" android:contentDescription="@string/todo"
                    android:background="#F3EAA3" android:onClick="getColor"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:tag="4"
                    android:layout_height="match_parent" android:id="@+id/img4"
                    android:layout_weight="1" android:contentDescription="@string/todo"
                    android:layout_margin="10dp" android:background="#9FACF4" android:onClick="getColor"/>
            <Button
                    android:text="@string/back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/back"
                    android:background="#9C27B0" android:textSize="20sp" android:textStyle="bold"
                    android:textColor="#4CAF50" android:onClick="goBackLocal"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1"
                android:layout_marginStart="-30dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/player1" android:layout_weight="1" android:padding="0dp"
                    android:textSize="25sp" android:layout_margin="10dp"
                    android:autofillHints="" android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:hint="@string/player_1" android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/player2" android:layout_weight="1" android:padding="0dp"
                    android:textSize="25sp" android:layout_margin="10dp"
                    android:autofillHints="" android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:hint="@string/player_2" android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/player3" android:layout_weight="1" android:padding="0dp"
                    android:textSize="25sp" android:layout_margin="10dp"
                    android:autofillHints="" android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:hint="@string/player_3" android:textStyle="bold"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/player4" android:layout_weight="1" android:padding="0dp"
                    android:textSize="25sp" android:layout_margin="10dp"
                    android:autofillHints="" android:paddingStart="20dp"
                    android:paddingEnd="0dp"
                    android:hint="@string/player_4" android:textStyle="bold"/>
            <Button
                    android:text="@string/start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/start"
                    android:background="#9C27B0" android:textSize="20sp" android:textStyle="bold"
                    android:textColor="#4CAF50" android:onClick="playLocalGameNow"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
